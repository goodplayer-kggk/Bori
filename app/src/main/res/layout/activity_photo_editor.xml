<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 하단 도구 선택 메뉴 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#222"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/toolContainer"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!-- 밝기 -->
                <LinearLayout
                    android:id="@+id/btnBrightness"
                    android:orientation="vertical"
                    android:layout_width="70dp"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@android:drawable/ic_menu_compass"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="밝기"
                        android:textColor="#fff"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- 대비 -->
                <LinearLayout
                    android:id="@+id/btnContrast"
                    android:orientation="vertical"
                    android:layout_width="70dp"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@android:drawable/ic_popup_disk_full"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="대비"
                        android:textColor="#fff"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- 채도 -->
                <LinearLayout
                    android:id="@+id/btnSaturation"
                    android:orientation="vertical"
                    android:layout_width="70dp"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@android:drawable/ic_lock_silent_mode"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="채도"
                        android:textColor="#fff"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
        <!-- 편집 이미지 -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:padding="16dp"
            android:contentDescription="Image Preview"/>

    </LinearLayout>

        <!-- 이미지 선택 Floating Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="Select Image" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>